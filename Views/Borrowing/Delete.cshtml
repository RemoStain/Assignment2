@model Assignment2.Models.Borrowing

<h2>Delete Borrowing</h2>

<p>Are you sure you want to delete this borrowing record?</p>

<p><strong>Book ID:</strong> @Model.BookId</p>
<p><strong>Reader ID:</strong> @Model.ReaderId</p>

<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="BorrowingId" />
    <button type="submit" class="btn btn-danger">Delete</button> |
    <a asp-action="Index">Cancel</a>
</form>
