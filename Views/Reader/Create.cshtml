@model Assignment2.Models.Reader

<form method="post">
    <div class="form-group">
        <label for="FirstName">First Name</label>
        <input type="text" class="form-control" id="FirstName" name="FirstName" required />
    </div>

    <div class="form-group">
        <label for="LastName">Last Name</label>
        <input type="text" class="form-control" id="LastName" name="LastName" required />
    </div>

    <div class="form-group">
        <label for="Email">Email</label>
        <input type="email" class="form-control" id="Email" name="Email" required />
    </div>

    <div class="form-group">
        <label for="PhoneNumber">Phone Number</label>
        <input type="text" class="form-control" id="PhoneNumber" name="PhoneNumber" required />
    </div>

    <div class="form-group">
        <label for="Address">Address</label>
        <input type="text" class="form-control" id="Address" name="Address" required />
    </div>

    <div class="form-group">
        <label for="BookId">Book</label>
        <select class="form-control" id="BookId" name="BookId" required>
            <option value="">Select a Book</option>
            @if (ViewBag.Books is SelectList books && books.Any())
            {
                foreach (var book in books)
                {
                    <option value="@book.Value">@book.Text</option>
                }
            }
            else
            {
                <option disabled>No books available</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="ReaderId">Reader</label>
        <select class="form-control" id="ReaderId" name="ReaderId" required>
            <option value="">Select a Reader</option>
            @if (ViewBag.Readers is SelectList readers && readers.Any())
            {
                foreach (var reader in readers)
                {
                    <option value="@reader.Value">@reader.Text</option>
                }
            }
            else
            {
                <option disabled>No readers available</option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>
