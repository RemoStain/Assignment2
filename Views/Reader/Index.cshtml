@model IEnumerable<Assignment2.Models.Reader>

@{
    ViewData["Title"] = "Readers";
}

<h1>Readers</h1>

<form asp-action="Index" method="get">
    <p>
        Search: <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" class="form-control" style="width: 300px; display: inline-block;" />
        <input type="submit" value="Search" class="btn btn-primary" />
    </p>
</form>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var reader in Model)
        {
            <tr>
                <td>@reader.FirstName</td>
                <td>@reader.LastName</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@reader.ReaderId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@reader.ReaderId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@reader.ReaderId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-success">Add New Reader</a>
