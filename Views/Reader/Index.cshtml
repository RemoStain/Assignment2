@model List<Assignment2.Models.Reader>

<h2>Readers</h2>
<a asp-action="Create">Add New Reader</a>

<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var reader in Model)
        {
            <tr>
                <td>@reader.FirstName</td>
                <td>@reader.LastName</td>
                <td>@reader.Email</td>
                <td>@reader.PhoneNumber</td>
                <td>
                    <a asp-action="Details" asp-route-id="@reader.ReaderId">Details</a> |
                    <a asp-action="Edit" asp-route-id="@reader.ReaderId">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@reader.ReaderId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
