@model IEnumerable<Assignment2.Models.Book>

@{
    ViewData["Title"] = "Books";
}

<h1>Books</h1>

<form asp-action="Index" method="get">
    <p>
        Search: <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" class="form-control" style="width: 300px; display: inline-block;" />
        <input type="submit" value="Search" class="btn btn-primary" />
    </p>
</form>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.Title</td>
                <td>@book.Author</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@book.BookId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@book.BookId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@book.BookId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-success">Add New Book</a>
