@model List<Assignment2.Models.Book>

<h2>Books</h2>
<a asp-action="Create">Add New Book</a>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.Title</td>
                <td>@book.Author</td>
                <td>
                    <a asp-action="Details" asp-route-id="@book.BookId">Details</a> |
                    <a asp-action="Edit" asp-route-id="@book.BookId">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@book.BookId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
