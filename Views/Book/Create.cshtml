@model Assignment2.Models.Book

<h2>Create Book</h2>

<form asp-action="Create" method="post">
    <div>
        <label asp-for="Title"></label>
        <input asp-for="Title" />
        <span asp-validation-for="Title"></span>
    </div>
    <div>
        <label asp-for="Author"></label>
        <input asp-for="Author" />
        <span asp-validation-for="Author"></span>
    </div>
    <div>
        <label asp-for="ISBN"></label>
        <input asp-for="ISBN" />
        <span asp-validation-for="ISBN"></span>
    </div>
    <div>
        <label asp-for="PublishedDate"></label>
        <input asp-for="PublishedDate" type="date" />
        <span asp-validation-for="PublishedDate"></span>
    </div>
    <button type="submit">Create</button>
</form>
